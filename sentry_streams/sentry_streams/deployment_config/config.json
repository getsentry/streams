{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/Main",
    "definitions": {
        "Main": {
            "type": "object",
            "properties": {
                "env": {
                    "$ref": "#/definitions/Env"
                },
                "pipeline": {
                    "$ref": "#/definitions/Pipeline"
                }
            }
        },
        "Pipeline": {
            "type": "object",
            "title": "pipeline",
            "additionalProperties": true,
            "properties": {
                "segments": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-z0-9]+$": {
                            "type": "object",
                            "title": "segment name",
                            "properties": {
                                "parallelism": {
                                    "type": "integer"
                                },
                                "steps_config": {
                                    "type": "object",
                                    "title": "steps_config"
                                }
                            }
                        }
                    }
                }
            },
            "required": [
                "segments"
            ]
        },
        "Env": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "topics": {
                    "type": "object"
                }
            }
        }
    }
}
